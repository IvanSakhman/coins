.initiation
  background-size cover
  background url("../img/background.png") repeat
  min-height calc(100vh - 93px)
  background-size 100px
  position relative
  padding-top 85px
  &__block
    width 65%
    min-width 455px
    margin 70px auto 0
  &__title
    color rgb(255, 255, 255)
    font-family "Open Sans"
    font-size 42px
    font-weight 400
    text-align center
  &__line
    height 3px
    background-color #fff
    margin 23px auto 0
    width 80px
  &__complete
    width 255px
    margin 25px auto 0
    position relative
  &__checkIcon
    display inline-block
    width 31px
    height 31px
    position absolute
    top 4px
  &__incomplete
    color rgb(236, 73, 37)
    font-family "Open Sans"
    font-weight 600
    font-size 35px
    display inline-block
    margin-left 48px
  &__section
    margin-top 35px
  &__kyc
    background-image linear-gradient(to top, rgb(0, 0, 0) 0%, rgba(123, 123, 123, 0) 100%)
    height 63px
    width 100%
    position relative
  &__subTitle
    position absolute
    top 50%
    left 2.5%
    transform translateY(-50%)
    color rgb(254, 254, 254)
    font-family "Open Sans"
    font-size 25px
    font-weight 600
  &__form
    margin-top 35px
  &__personal,
  &__account
    width 454px
    margin 0 auto
    display block
    height 67px
    -webkit-appearance none
    -moz-appearance none
    appearance none
    border none
    border-top-left-radius 5px
    border-top-right-radius 5px
    padding-left 65px
    color rgb(95, 94, 99)
    font-family "Open Sans"
    font-size 28px
    font-weight 700
    background #f5f5f5 url("../img/triangle.png") no-repeat 409px 25px
  &__box
    width 454px
    background-color #fff
    height 80px
    margin 0 auto
  &__input
    padding-top 25px
    width 350px
    -webkit-appearance none
    appearance none
    border none
    border-bottom 2px solid #d6d6d6
    display block
    margin 0 auto
    color #5f5e63
    font-family "Open Sans"
    height 57px
    padding-left 12px
  &__inputFile
    width 0.1px
    height 0.1px
    opacity 0
    overflow hidden
    position absolute
    z-index -1
  &__inputFile + label
    background-color #ec4925
    display block
    cursor pointer
    width 454px
    text-align center
    height 67px
    margin 26px auto 0
    color rgb(255, 255, 255)
    font-family "Open Sans"
    font-weight 600
    text-transform uppercase
    padding-top 25px
    font-size 20px
  &__container
    margin-top 30px
  &__text
    color rgb(134, 135, 139)
    font-family "Open Sans"
    font-size 13px
    font-weight 400
    line-height 17px
    text-align center
  &__userInfo
    margin-top 23px
  &__fields
    width 454px
    margin 0 auto
    background-color #fff
    border-radius 5px
    padding-bottom 23px
  &__savings
    margin-top 26px
  &__submit
    -webkit-appearance none
    -moz-appearance none
    appearance none
    display block
    width 454px
    height 67px
    background-color #ec4925
    border none
    color rgb(255, 255, 255)
    font-family "Open Sans"
    font-weight 600
    text-transform uppercase
    font-size 20px
    margin 23px auto 0
    cursor pointer
  &__mail
    margin 23px auto 0
    padding-bottom 60px
    width 454px
  &__message
    width 454px
    display block
    -webkit-appearance none
    -moz-appearance none
    appearance none
    border none
    background transparent
    border-bottom 2px solid #fff
    font-size 16px
    text-align center
    height 43px
    color #5f5e63

@media screen and (max-width: 600px)
  .initiation
    padding-top 60px
    min-height calc(100vh - 45px)
    &__block
      margin-top 50px
      width 80%
      min-width 200px
    &__title
      font-size 30px
    &__line
      margin-top 17px
      height 1px
      width 50px
    &__complete
      margin-top 17px
    &__checkIcon
      width 20px
      height 20px
      top 6px
      left 17px
    &__incomplete
      font-size 28px
    &__kyc
      height 40px
    &__subTitle
      font-size 14px
    &__personal,
    &__account
      width 100%
      max-width 320px
      margin 0 auto
      padding 0
      height 50px
      font-size 22px
      padding-left 15px
      background  #f5f5f5 url("../img/triangle.png") no-repeat 95% 16px
    &__box
      width 100%
      max-width 320px
    &__input
      width 80%
      font-size 15px
    &__inputFile + label
      height 50px
      width 100%
      max-width 320px
      margin-top 16px
      padding-top 16px
    &__text
      margin-bottom 5px
    &__fields
      width 100%
      max-width 320px
    &__submit
      height 50px
      width 100%
      max-width 320px
    &__mail
      width 100%
      max-width 320px
    &__message
      width 100%
      font-size 14px
