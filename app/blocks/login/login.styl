.login
  background-size cover
  background url("../img/background.png") repeat
  min-height calc(100vh - 93px)
  background-size 100px
  position relative
  padding-top 85px
  &__block
    width 450px
    margin 90px auto 0
  &__brand
    width 345px
    margin 0 auto
    display block
  &__line
    width 80px
    height 3px
    background-color #fff
    margin 28px auto 0
  &__form
    margin-top 37px
    border-top-left-radius 5px
    border-top-right-radius 5px
    background-color #f5f5f5
  &__title
    padding-top 17px
  &__name
    color rgb(95, 94, 99)
    font-family "Open Sans"
    font-size 28px
    font-weight 700
    text-decoration none
    padding 5px
    &_login
      margin-left 120px
    &_active
      color #ec4824
  &__layout
    margin-top 22px
    background-color #fff
  &__fields
    padding-top 14px
  &__input
    -webkit-appearance none
    appearance none
    border none
    border-bottom 2px solid #d6d6d6
    display block
    width 79%
    margin 0 auto
    height 39px
    padding-left 12px
    color #5f5e63
    font-family "Open Sans"
    margin-top 24px
  &__text
    color rgb(189, 189, 189)
    font-family "Open Sans"
    font-weight 400
    margin 21px 0 0 62px
    font-size 13px
    line-height 16px
    width 250px
    padding-bottom 23px
  &__submit
    width 100%
    border none
    background-color #ec4824
    color #fff
    font-family "Open Sans"
    font-weight 600
    font-size 20px
    height 67px
  &__forgot
    text-align center
    display block
    margin 21px auto 0
    font-size 18px
    text-decoration none
    color #fff
    padding-bottom 60px

@media screen and (max-width: 1023px)
  .login
    min-height calc(100vh - 45px)
    padding-top 60px

@media screen and (max-width: 600px)
  .login
    min-height calc(100vh - 45px)
    padding-top 60px
    &__block
      margin 30px auto 0
      width 80%
    &__brand
      width 200px
    &__line
      width 50px
      height 1px
      margin-top 25px
    &__title
      padding-top 12px
    &__name
      font-size 22px
      &_login
        margin-left 35px
    &__layout
      margin-top 15px
    &__fields
      padding-top 5px
    &__input
      margin-top 10px
      height 35px
      font-size 15px
    &__text
      width 71%
      margin-left 30px
    &__submit
      height 50px