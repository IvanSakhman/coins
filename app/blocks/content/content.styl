.content
  background-size cover
  background url("../img/background.png") repeat
  height calc(100vh - 66px)
  background-size 100px
  position relative
  padding-top 85px
  &__block
    position absolute
    margin-left 15.4%
    width 710px
    top 50%
    transform translateY(-50%)
  &__brand
    width 495px
  &__title
    color rgb(255, 255, 255)
    font-family Raleway
    font-size 46px
    font-weight 400
    line-height 52px
    margin-top 20px
    letter-spacing -1.2px
  &__line
    width 77px
    height 3px
    background-color #fff
    margin-top 37px
  &__info
    margin-top 43px
    opacity 0.8
    color #fff
    font-family Raleway
    font-size 22px
    font-weight 300
    line-height 27px
    width 580px
  &__button
    margin-top 70px
  &__link
    color #fff
    font-size 17px
    letter-spacing 0.4px
    font-weight 600
    opacity 0.69
    text-decoration none
    padding 13px 11px
    border 2px solid #fff
    margin-right 50px
    &:hover
      color #ec4824
      border 2px solid #ec4824

.contact
  position absolute
  bottom 40px
  right 50px
  background transparent
  color #fff
  font-family Raleway
  &__us
    font-size 20px
    color #ec4824
    font-weight 600
    margin-bottom 10px
  &__text
    margin-bottom 5px
    font-size 18px

@media screen and (max-width: 1280px)
  .content
    &__block
      margin-left 7%
      width 560px
    &__brand
      width 375px
    &__title
      font-size 36px
      letter-spacing 0
    &__line
      margin-top 30px
    &__info
      font-size 16px
      margin-top 30px
    &__button
      margin-top 40px
    &__link
      font-size 15px

@media screen and (max-width: 1023px)
  .content
    min-height 750px
    &__block
      width 80%
      top 10%
      transform none
    &__brand
      width 310px
    &__title
      margin-top 15px
      line-height 25px
      font-size 21px
      width 330px
    &__line
      width 60px
      height 2px
      margin-top 35px
    &__info
      margin-top 35px
      width 100%
      font-size 19px

  .contact
    top 510px
    left 7%
    color #fff
    &__us
      font-size 15px
      margin-bottom 10px
    &__text
      font-size 14px
      line-height 20px
@media screen and (max-width: 425px)
  .content
    &__brand
      width 200px
    &__title
      font-size 16px
      width 100%
    &__line
      width 50px
      height 1px
      margin-top 25px
    &__info
      margin-top 25px
      font-size 15px
    &__link
      display inline-block
      width 150px
      text-align center
      margin-bottom 20px