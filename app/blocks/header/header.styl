.header
  background-color #000
  height 85px
  position fixed
  z-index 10
  width 100%
  &__logo
    width 197px
    margin 18px 0 0 15.4%
  &__info
    display inline-block
    float right
    margin 34px 10px 0 0
    text-transform uppercase
  &__price
    font-size 14px
    font-weight 600
    opacity 0.69
    color #fff
    display inline-block
    margin-right 10px
  &__cost
    font-size 14px
    font-weight 600
    opacity 0.69
    display inline-block
    color #ec4824
  &__menu
    float right
    margin 23px 14.5% 0 0
    letter-spacing 1.4px
  &__item
    display inline-block
    margin-left 25px
  &__link
    color rgb(255, 255, 255)
    display inline-block
    font-size 14px
    font-weight 600
    opacity 0.69
    text-decoration none
    padding 10px
    border 2px solid #000
    &:hover
      color #ec4824
      border 2px solid #ec4824

.hamburger,
.cross
  color rgb(255, 255, 255)
  opacity 0.69
  display none
  -webkit-appearance none
  appearance none
  background transparent
  border none

.cross
  display none

.menu
  display none

@media screen and (max-width: 1380px)
  .header
    &__logo
      margin-left 7%
    &__menu
      margin-right 7%

@media screen and (max-width: 1120px)
  .header
    &__menu
      margin-right 4%
    &__item
      margin-left 15px

@media screen and (max-width: 1023px)
  .header
    height 60px
    &__logo
      width 150px
      margin-top 12px
    &__info
      position absolute
      right 12%
      margin-top 21px
    &__menu
      display none
  .hamburger
    display block
    float right
    font-size 21px
    color #fff
    margin 13px 7% 0 0

  .cross
    display block
    position absolute
    font-size 66px
    color #fff
    right 7%
    top 0

  .menu
    &__item
      width 100%
      height 50px
      background-color #000
      position relative
    &__link
      color rgb(255, 255, 255)
      display inline-block
      font-size 14px
      font-weight 600
      opacity 0.69
      text-decoration none
      padding 10px
      border 2px solid #000
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      &:hover
        color #ec4824
        border 2px solid #ec4824

@media screen and (max-width: 425px)
  .header
    &__logo
      width 110px
      margin-top 15px