.charts
  background-size cover
  background url("../img/background.png") repeat
  min-height calc(100vh - 66px)
  background-size 100px
  position relative
  padding-top 85px
  &__title
    color rgb(255, 255, 255)
    font-family "Open Sans"
    font-size 42px
    font-weight 600
    text-align center
    margin 120px 0 100px
  &__section
    width 90%
    margin 0 auto
    padding-bottom 120px
    &:after
      content ""
      clear both
      display table
  &__block
    float left
    width 30%
    margin-right 3%
    background-color #fff
    border-top-left-radius 5px
    border-top-right-radius 5px
  &__header
    background-color #f5f5f5
    border-top-left-radius 5px
    border-top-right-radius 5px
    height 67px
  &__nameHeader
    float left
    color #5f5e63
    font-family "Open Sans"
    font-weight 700
    text-decoration none
    margin-left 5%
    font-size 18px
    padding-top 24px
  &__price
    float right
    color #5f5e63
    font-family "Open Sans"
    font-size 16px
    font-weight 400
    text-decoration none
    padding-top 22px
    margin-right 5%
  &__input
    -webkit-appearance none
    -moz-appearance none
    appearance none
    border none
    border-bottom 2px solid #d6d6d6
    display block
    width 79%
    margin 0 auto
    height 39px
    padding-left 12px
    color #5f5e63
    font-family "Open Sans"
    margin-top 24px
  &__buyButton
    -webkit-appearance none
    -moz-appearance none
    appearance none
    border none
    width 79%
    height 39px
    display block
    margin 45px auto 0
    background-color #eb4824
    color #fff
    font-family "Open Sans"
    font-weight 400
    font-size 18px
  &__text
    font-weight 400
    color #5f5e63
    width 79%
    margin 20px auto
    text-align center
    padding-bottom 20px
  &__pagination
    background-color #eb4824
    height 25px
    display flex
    justify-content space-around
  &__item
    color #fff
    text-align center
    text-decoration none
    padding 3px
  &__container
    margin 0
    height 277px
  &__theadData
    font-size 16px
  &__mainData
    font-size 12px

@media screen and (max-size: 1280px)
  .charts
    &__title
      margin 60px auto 40px