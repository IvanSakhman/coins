.bank
  background-size cover
  background url("../img/background.png") repeat
  min-height calc(100vh - 93px)
  background-size 100px
  position relative
  padding-top 85px
  &__section
    margin-top 200px
    padding-bottom 100px
    &:last-of-type
      padding-bottom 200px
    &:after
      content ""
      clear both
      display table
  &__title
    color rgb(255, 255, 255)
    font-family "Open Sans"
    font-size 42px
    font-weight 600
    text-align center
  &__block
    width 90%
    margin 55px auto 0
  &__item
    float left
    width 20%
    min-height 134px
  &__name
    background-color #F5F5F5
    height 67px
    text-align center
    color #5f5e63
    font-family "Open Sans"
    font-size 24px
    font-weight 700
    text-decoration none
    padding-top 17px
    &_first
      border-top-left-radius 5px
    &_last
      border-top-right-radius 5px
  &__info
    background-color #fff
    height 67px
    text-align center
    color #eb4824
    font-family "Open Sans"
    font-weight 400
    font-size 20px
    padding-top 24px
  &__menu
    width 100%
    background-color #fff
  &__buttons
    height 67px
    width 208px
    background #fff
    margin 0 auto
    padding-top 18px
  &__button
    -webkit-appearance none
    -moz-appearance none
    appearance none
    background-color #fff
    border 2px solid #eb4824
    color #eb4824
    padding 9px

@media screen and (max-width: 1280px)
  .bank
    &__section
      margin-top 100px
    &__block
      margin-top 40px
    &__item
      min-height 80px
    &__name
      height 40px
      font-size 18px
      padding-top 9px
    &__info
      height 40px
      font-size 16px
      padding-top 12px
    &__buttons
      width 150px
      height 40px
      padding-top 8px
    &__button
      font-size 12px
      padding 3px

@media screen and (max-width: 1023px)
  .bank
    &__section
      padding-bottom 0
      &:last-of-type
        padding-bottom 100px
    &__item
      width 100%
      max-width 500px
      margin 0 auto 30px
      float none
    &__name
      border-top-left-radius 5px
      border-top-right-radius 5px

@media screen and (max-width: 768px)
  .bank
    &__section
      margin-top 50px
    &__title
      font-size 23px
