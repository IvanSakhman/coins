.footer
  background-color #000
  height 66px
  position relative
  &__text
    color rgb(134, 135, 139)
    font-family "Open Sans"
    font-size 14px
    font-weight 400
    line-height 20px
    margin-left 15.4%
    width 390px
    position absolute
    top 50%
    transform translateY(-50%)

@media screen and (max-width: 1023px)
  .footer
    height 45px
    &__text
      font-size 14px
      margin-left 7%
      width 77%

@media screen and (max-width: 425px)
  .footer
    &__text
      font-size 12px