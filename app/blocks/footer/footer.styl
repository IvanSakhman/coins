.footer
  background-color #000
  height 93px
  position relative
  &__text
    color rgb(134, 135, 139)
    font-family "Open Sans"
    font-size 14px
    font-weight 400
    line-height 20px
    margin-left 15.4%
    width 390px
    position absolute
    top 50%
    transform translateY(-50%)

.contact
  position absolute
  bottom 2px
  right 50px
  background transparent
  color #fff
  font-family Raleway
  &__us
    font-size 14px
    color #ec4824
    font-weight 600
    margin-bottom 3px
  &__text
    margin-bottom 5px
    font-size 12px

@media screen and (max-width: 1023px)
  .footer
    height 121px
    &__text
      font-size 14px
      width 43%
      margin-left 7%
  .contact
    bottom 0
    position static
    margin 5px 5% 0 0
    float right

@media screen and (max-width: 820px)
  .footer
    height 200px
    &__text
      position static
      transform none
      padding-top 20px
      width 80%

  .contact
    float left
    margin 20px 0 0 7%

@media screen and (max-width: 425px)
  .footer
    height 230px
    &__text
      font-size 12px